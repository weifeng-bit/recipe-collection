doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    <title>Recipe Collection App</title>
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class='d-flex' id='wrapper')
      div(class="border-end bg-white" id="sidebar-wrapper")
        div(class="sidebar-heading border-bottom bg-light") Menu
        div(class="list-group list-group-flush")
            a(class="list-group-item list-group-item-action list-group-item-light p-3" href='/catalog') Home
            a(class="list-group-item list-group-item-action list-group-item-light p-3" href='/catalog/recipes') All recipes
            a(class="list-group-item list-group-item-action list-group-item-light p-3" href='/catalog/cuisines') All cuisines
            a(class="list-group-item list-group-item-action list-group-item-light p-3" href='/catalog/recipe/create') Create new recipe
            a(class="list-group-item list-group-item-action list-group-item-light p-3" href='/catalog/cuisine/create') Create new cuisine

      div(id="page-content-wrapper")
        nav(class="navbar navbar-expand-lg navbar-light bg-light border-bottom")
            div(class="container-fluid")
                button(class="btn btn-primary" id="sidebarToggle") Toggle Menu
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                  span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarSupportedContent")
                  ul(class="navbar-nav ms-auto mt-2 mt-lg-0")
                    li(class="nav-item")
                      a(class="nav-link" href="/catalog") Home
                    li(class="nav-item")
                      a(class="nav-link" href="https://weifeng-bit.github.io/personalwebsite/") About Author
                    li(class="nav-item dropdown")
                      a(class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Lists
                      div(class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown")
                        a(class="dropdown-item" href='/catalog/recipes') All recipes
                        a(class="dropdown-item" href='/catalog/cuisines') All cuisines
        div(class='container-fluid')
          block content
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js")
    script(src="/javascripts/scripts.js")
    